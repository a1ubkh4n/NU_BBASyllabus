<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acc4th"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.a1ubkh4n.nusyllabus.acc4th">

    <include
        android:id="@+id/acc4th"
        layout="@layout/tool_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/scrollmarginbottom"
        android:layout_below="@+id/acc4th">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accforth"
                style="@style/headingforyear"
                android:text="@string/select_your_subject" />

            <View style="@style/styleforview" />


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/acc_theory"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="acc_acc_theory"
                    android:text="@string/AccountingTheory" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    android:id="@+id/add_audit_pro"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="adv_audit_pro"
                    android:text="@string/AdvancedAuditingandProfessionalEthics" />

            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="accInfor"
                    android:text="@string/accounting_information_systems" />

            </LinearLayout>


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    android:id="@+id/orga_behavi"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="orga_behavi"
                    android:text="@string/OrganizationalBehavior" />

            </LinearLayout>


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/corporate_law"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="corpoLaw"
                    android:text="@string/CorporateLawandPractices" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/working_capi"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="workCapi"
                    android:text="@string/WorkingCapitalManagementandFinancialStatementAnalysis" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/add_acc_two"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="addAcctwo"
                    android:text="@string/AdvancedAccounting_two" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/invest_ana"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="investAna"
                    android:text="@string/InvestmentAnalysisandPortfolioManagement" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/resear_metho"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="recharMetho"
                    android:text="@string/ResearchMethodology" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewacc4th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_forSub" />
</RelativeLayout>

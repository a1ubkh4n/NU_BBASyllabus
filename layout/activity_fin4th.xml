<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fin4th"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.a1ubkh4n.nusyllabus.fin4th">

    <include
        android:id="@+id/fin4th"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fin4th">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/finfourth"
                style="@style/headingforyear"
                android:text="@string/select_your_subject" />

            <View style="@style/styleforview" />


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/inter_trade"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="interTrade"
                    android:text="@string/InternationalTradeandFinance" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    android:id="@+id/public_finan"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="publicFinan"
                    android:text="@string/PublicFinanceandTaxation" />

            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="finanMarket"
                    android:text="@string/financial_market_and_institutions" />

            </LinearLayout>


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    android:id="@+id/com_financ"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="comFinan"
                    android:text="@string/ComparativeFinancialSystem" />

            </LinearLayout>


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/human_resour"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="human_resouc"
                    android:text="@string/human_resource_management" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/busi_resear"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="businesResear"
                    android:text="@string/BusinessResearchMethodology" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/sme_and_micro"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="smeAndMicro"
                    android:text="@string/SMEandMicroFinance" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/Ebank"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="eBanking"
                    android:text="@string/EBankingandECommerce" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/central_bank"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="centralBanking"
                    android:text="@string/CentralBanking" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewfin4th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_forSub" />

</RelativeLayout>

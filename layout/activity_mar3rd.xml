<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mar3rd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.a1ubkh4n.nusyllabus.mar3rd">

    <include
        android:id="@+id/mar3rd"
        layout="@layout/tool_bar" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewmar3rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_forSub" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mar3rd"
        android:layout_marginBottom="@dimen/scrollmarginbottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marthird"
                style="@style/headingforyear"
                android:text="@string/select_your_subject"/>

            <View style="@style/styleforview" />


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/innov_newpro"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="prinMartwo"
                    android:text="@string/principles_of_marketing_ii" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    android:id="@+id/suppl_chain"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="orgaMar"
                    android:text="@string/OrganizationalBehavior" />

            </LinearLayout>


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />

                <Button
                    android:id="@+id/entern2"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="financiMar"
                    android:text="@string/financial_management" />

            </LinearLayout>


            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/man_acc3"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="busstattwo"
                    android:text="@string/business_statistics_ii" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/fin_man3"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="adverMar"
                    android:text="@string/AdvertisingandPromotion" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/ligal_environ"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="legalaspectMar"
                    android:text="@string/legal_aspects_of_marketing" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/bank_insuran3"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="macroMar"
                    android:text="@string/macro_economics" />
            </LinearLayout>

            <LinearLayout
                style="@style/styleforeachbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/buttonimage"
                    android:contentDescription="@string/syllabus" />


                <Button
                    android:id="@+id/marMang3"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="taxbdMar"
